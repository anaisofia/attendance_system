<div class="page-header">
  <%= link_to lessons_path, class: 'btn btn-default' do %>
    All Lessons
  <% end %>
  <%= link_to edit_lesson_path(@lesson), class: 'btn btn-primary' do %>
    Edit
  <% end %>
  <h1>Show lesson</h1>
</div>

<dl class="dl-horizontal">
  <dt>Date:</dt>
  <dd><%= @lesson.date %></dd>

  <dt>Subject:</dt>
  <dd><%= @lesson.subject %></dd>

  <dt>Description:</dt>
  <dd><%= @lesson.description %></dd>

  <dt>Teacher:</dt>
  <dd><%= @lesson.course.teachers %></dd>

  <dt>Student:</dt>
  <dd><%= @lesson.course.students %></dd>

  <dt>Course:</dt>
  <dd><%= @lesson.course.name %></dd>

  <dt>Lesson status:</dt>
  <dd><%= @lesson.lesson_status.name %></dd>

</dl>
